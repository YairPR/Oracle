
SET LINESIZE  145
SET PAGESIZE  9999
SET VERIFY    off
set line 1000
col Schema format a20
col "Object Name" format a30
col "Tablespace" format a30
col "Object Type" format a10
break on report on disk_group_name skip 1
compute sum label "Grand Total: " of Size_MB on report
select
owner as "Schema"
, segment_name as "Object Name"
, segment_type as "Object Type"
, round(bytes/1024/1024,2) as Size_MB
, tablespace_name as "Tablespace"
from dba_segments
where segment_name in (
'SCHEMA'
)
and owner = '&USERNAME';



··············
RUTA:
··············
--- export 
nohup expdp \'/ as sysdba\' directory=DIR tables=NOMBRESXHEMA.NOMBRETABLA dumpfile=backup_BBDD_RITM0275782.dmp log=backup_BBDD_RITM0275782.log &

nohup impdp  \'/ as sysdba\' directory=DIR  tables=NOMBRESXHEMA.NOMBRETABLA  dumpfile=exp_bbdd_RITM0275782.dmp TABLE_EXISTS_ACTION=REPLACE log=imp_ddbbddITM0275782.log &

:
